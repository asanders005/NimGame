<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NimGame"
             x:Class="NimGame.MainPage"
             Title="Main Canvas">

    <Grid BackgroundColor="White">
        
        <GraphicsView x:Name="GameBoard" 
                      BackgroundColor="AliceBlue"
                      WidthRequest="500"
                      HeightRequest="500"
                      HorizontalOptions="Center"
                      VerticalOptions="Center">
        </GraphicsView>

        <VerticalStackLayout Spacing="40">

            <Button Text="Start Game" Clicked="SettingPage" />
            <Button Text="How to Play" Clicked="HowToPlay" />
            <Button Text="Exit Game" Clicked="ExitGame" />
        </VerticalStackLayout>

        
    </Grid>


</ContentPage>
