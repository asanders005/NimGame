<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NimGame.SettingsPage"
             Title="SettingsPage"
             BackgroundColor="Wheat">
    <Grid BackgroundColor="White">
        <VerticalStackLayout BackgroundColor="ForestGreen">
            <Label 
            TextColor="Black"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </VerticalStackLayout>


        <VerticalStackLayout Spacing="40">

            <Button Text="Player versus Player" Clicked="PlayerVersusPlayer" />
            <Button Text="Player versus AI" Clicked="PlayerVersusAI" />
            <Button Text="Easy" Clicked="Easy" />
            <Button Text="Medium" Clicked="Medium" />
            <Button Text="Hard" Clicked="Hard" />
            
            <Button Text="Play Game" Clicked="GamePage" />

        </VerticalStackLayout>

    </Grid>
</ContentPage>